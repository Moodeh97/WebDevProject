<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit A New Book</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Help us build our database!</p>
  </div>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-book" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        <div class="col-12">
          <label for="name" class="form-label">Book Name</label>
          <input type="name" name="name" id="name" class="form-control" required>
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
        </div>

        <div class="col-12">
          <label for="author" class="form-label">Author</label>
          <textarea name="author" id="author" class="form-control" cols="30" rows="1"></textarea>
        </div>

        <div class="col-12">
          <label for="category">Select Category</label>
          <select class="form-select form-control" name="category" aria-label="Category">
            <option selected>Select Category</option>
            <option value="Action">Action</option>
            <option value="Romance">Romance</option>
            <option value="Fiction">Fiction</option>
            <option value="Mystery">Mystery</option>
            <option value="Non-fiction">Non-fiction</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image">Book Image</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Submit Book</button>
        </div>

      </div>
    
    </form>

  </div>
</div>