<% if(book != null ) { %>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- book.name %></li>
    </ol>
  </nav>


  <div class="row">

    <div class="col-12 col-md-4">
      <img src="/uploads/<%- book.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- book.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%- book.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- book.category %></div>
        <div class="col-12" style="">
          <h4>Book Description</h4>
          <%- book.description %>
          <br>
          <br>
        </div>

        <div class="col-12" style="">
          <h4>Book Author</h4>
          <%- book.author %>
        </div>
      </div>


    </div>
  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>